{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Dubhe",
            "windows": {
                "command": "${workspaceFolder}\\Dubhe\\build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/Dubhe/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/Dubhe"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Sandbox",
            "windows": {
                "command": "${workspaceFolder}\\Sandbox\\build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/Sandbox/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/Sandbox"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build All",
            "windows": {
                "command": "${workspaceFolder}\\build-all.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/build-all.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Clean Everything",
            "windows": {
                "command": "${workspaceFolder}\\clean-all.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/clean-all.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Post Build",
            "windows":{
                "command": "${workspaceFolder}\\post-build.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/post-build.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        }
    ],
    "version": "2.0.0"
}